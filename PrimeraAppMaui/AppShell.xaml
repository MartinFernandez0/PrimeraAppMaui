<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PrimeraAppMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PrimeraAppMaui"
    xmlns:Pages="clr-namespace:PrimeraAppMaui.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Nuestra primera App Maui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Libros"
        ContentTemplate="{DataTemplate Pages:LibrosPage}"
        Route="LibrosPage" />

</Shell>